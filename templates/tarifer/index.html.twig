{% extends 'base.html.twig' %}

{% block title %}Tarifer index{% endblock %}

{% block body %}
    <h1>Tarifer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tarif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarifer in tarifers %}
            <tr>
                <td>{{ tarifer.id }}</td>
                <td>{{ tarifer.tarif }}</td>
                <td>
                    <a href="{{ path('app_tarifer_show', {'id': tarifer.id}) }}">show</a>
                    <a href="{{ path('app_tarifer_edit', {'id': tarifer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tarifer_new') }}">Create new</a>
{% endblock %}
